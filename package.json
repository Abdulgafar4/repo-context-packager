{
  "name": "@tajudeen/repo-context-packager",
  "version": "1.0.3",
  "description": "A command-line tool for packaging repository context for sharing with LLMs.",
  "main": "dist/cli.js",
  "bin": {
    "repo-context-packager": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "node -e \"const fs=require('fs');const f='dist/cli.js';const c=fs.readFileSync(f,'utf8');if(!c.startsWith('#!'))fs.writeFileSync(f,'#!/usr/bin/env node\\n'+c);\"",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:file": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abdulgafar4/repo-context-packager.git"
  },
  "keywords": [
    "cli",
    "repository",
    "packager",
    "context",
    "llm"
  ],
  "author": "Abdulgafar",
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^9.5.0",
    "glob": "^11.0.3",
    "smol-toml": "^1.4.2",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/node": "^22.9.3",
    "@vitest/coverage-istanbul": "^4.0.8",
    "typescript": "^4.9.5",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/abdulgafar4/repo-context-packager/issues"
  },
  "homepage": "https://github.com/abdulgafar4/repo-context-packager#readme"
}
